<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="130dp"
        android:layout_height="115dp"
        android:background="@drawable/bowenlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />
    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/rectangle"
        android:layout_marginTop="700dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bowen University"
        android:textColor="#377BF5"
        android:textSize="25sp"
        android:fontFamily="@font/poppins_semibold"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image1"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student HandBook"
        android:textColor="#377BF5"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="normal"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coremotto"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#FFFFF400"
        android:shadowColor="#000000"
        android:layout_alignBottom="@+id/image2"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>